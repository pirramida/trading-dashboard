{
  "name": "trading-terminal",
  "version": "1.0.0",
  "description": "Electron + React trading terminal",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-react\" \"wait-on http://localhost:3230 && npm run start-electron\"",
    "start-electron": "electron .",
    "start-react": "cross-env PORT=3230 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "crypto-js": "^4.1.1",
    "date-fns": "^3.6.0",
    "electron-updater": "^6.1.7",
    "lightweight-charts": "^4.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-rnd": "^10.4.7",
    "react-router-dom": "^6.22.3",
    "sqlite3": "^5.1.7",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.1",
    "@electron-forge/maker-deb": "^6.4.1",
    "@electron-forge/maker-rpm": "^6.4.1",
    "@electron-forge/maker-squirrel": "^6.4.1",
    "@electron-forge/maker-zip": "^6.4.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^28.1.3",
    "electron-builder": "^24.11.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.example.tradingterminal",
    "productName": "Trading Terminal",
    "copyright": "Copyright Â© 2024",
    "mac": {
      "category": "public.app-category.finance",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Finance"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "public/**/*",
      "package.json",
      "config.json"
    ],
    "extraResources": [
      {
        "from": "config.json",
        "to": "config.json"
      },
      {
        "from": "data",
        "to": "data"
      },
      {
        "from": "logs",
        "to": "logs"
      }
    ]
  }
}
